{
  "name": "@schibstedspain/cmp",
  "version": "0.0.1",
  "description": "GDPR - Consent Management Provider",
  "main": "src/index.js",
  "scripts": {
    "cleanDistFolder": "rm -Rf ./dist",
    "build": "npm run cleanDistFolder & webpack --config ./src/build/webpack.config.babel.js --progress --profile --colors --display-error-details --display-cached",
    "prepublishOnly": "npm run cleanDistFolder && npm run build",
    "test": "mocha --recursive --require babel-polyfill --compilers js:babel-register \"test/**/*.js\"",
    "coverage": "istanbul cover --report html _mocha -- ./test --recursive --compilers js:babel-register",
    "coverage:ci": "istanbul cover _mocha -- ./test --recursive --compilers js:babel-register && codecov",
    "lint": "sui-lint js",
    "pro": "NODE_ENV=production npm run build",
    "dev": "NODE_ENV=development npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scm-spain/CMP.git"
  },
  "keywords": [
    "ads",
    "advertising",
    "schibsted",
    "gdpr",
    "cmp"
  ],
  "author": "The Mighty Ducks of Advertising",
  "license": "ISC",
  "devDependencies": {
    "@s-ui/lint": "^2.13.0",
    "babel-cli": "^6.24.0",
    "babel-loader": "^7.1.4",
    "babel-preset-sui": "1",
    "babel-register": "^6.24.0",
    "chai": "^4.0.2",
    "codecov": "^3.0.2",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^11.11.0",
    "mocha": "^3.4.2",
    "sinon": "^2.3.4",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "babel": {
    "presets": [
      "sui"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@s-ui/lint/eslintrc.js"
    ]
  },
  "dependencies": {
    "consent-string": "^1.2.4",
    "whatwg-fetch": "^2.0.4"
  }
}
